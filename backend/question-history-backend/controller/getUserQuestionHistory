import express from 'express';
import QuestionHistory from './path-to-your-model/QuestionHistory'; // Adjust the path to where your model is located

const app = express();

app.get('/questions/:userID', async (req, res) => {
    try {
        const userID = req.params.userID;
        const questions = await QuestionHistory.find({ userid: userID });

        if (!questions || questions.length === 0) {
            return res.status(404).send('No questions found for the given user.');
        }

        res.json(questions);
    } catch (err) {
        res.status(500).send('Error retrieving questions: ' + err.message);
    }
});

const PORT = process.env.PORT || 3000;
app.listen(PORT, () => {
    console.log(`Server is running on port ${PORT}`);
});
